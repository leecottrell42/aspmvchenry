@model HenryConnect.Models.ABook
@{
    ViewData["Title"] = "Update a book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add a book</h2>
<form asp-action="Update">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="BookCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BookCode" class="form-control" readonly />
                <span asp-validation-for="BookCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublisherCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublisherCode" class="form-control" />
                <span asp-validation-for="PublisherCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Paperback" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Paperback" class="form-control" />
                <span asp-validation-for="Paperback" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
